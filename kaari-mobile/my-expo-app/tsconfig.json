{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@backend/*": [
        "src/backend/*"
      ]
    },
    "types": [
      "nativewind/types",
      "jest"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app-env.d.ts",
    "nativewind-env.d.ts"
  ]
}